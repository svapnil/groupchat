{
  "name": "terminal-chat",
  "version": "0.1.0",
  "description": "CLI chat client for Terminal Chat",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "terminal-chat": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "keytar": "^7.9.0",
    "open": "^10.1.0",
    "phoenix": "^1.8.3",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "chat",
    "cli",
    "terminal",
    "ink",
    "tui"
  ],
  "license": "MIT"
}
