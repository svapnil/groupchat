{
  "name": "groupchat",
  "version": "0.0.12",
  "description": "CLI chat client for Groupchat",
  "type": "module",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/svapnil/groupchat-main"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "groupchat": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean --no-splitting",
    "dev": "tsup src/index.ts --format esm --watch --no-splitting",
    "dev:bun": "bunx tsup src/index.ts --format esm --watch --no-splitting",
    "start": "NODE_ENV=development node dist/index.js",
    "start:bun": "NODE_ENV=development bun dist/index.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "keytar": "^7.9.0",
    "open": "^10.1.0",
    "phoenix": "^1.8.3",
    "react": "^18.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/ws": "^8.18.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "chat",
    "cli",
    "terminal",
    "ink",
    "tui"
  ],
  "license": "MIT"
}
